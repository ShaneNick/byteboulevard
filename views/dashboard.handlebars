 <h1>Your Dashboard</h1>
<p>Welcome, {{username}}!</p>

<nav>
  <a href="/">Home</a>
  <a href="/dashboard">Dashboard</a>
  <a href="/logout">Log Out</a>
</nav>

<h2>Your Posts</h2>
{{#if posts.length}}
    <ul>
        {{#each posts}}
            <li>
                <h3>{{this.title}}</h3>
                <p>Posted on {{format_date this.date_created}}</p>
                <a href="/dashboard/edit/{{this.id}}">Edit</a>
                <a href="/dashboard/delete/{{this.id}}">Delete</a>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>You have not created any posts yet.</p>
{{/if}}

<button class="open-button" onclick="openForm()">Add a New Post</button>

<!-- The form, initially hidden -->
<div class="form-popup" id="myForm" style="display: none;">

  <form action="/" class="form-container" method="POST">
    <h1>Add a New Post</h1>

    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Enter Title" name="title" required>

    <label for="content"><b>Content</b></label>
    <textarea placeholder="Start typing here..." name="content" required></textarea>

    <button type="submit" class="btn">Add Post</button>
    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
  </form>
</div>

<script src="/js/addpost.js"></script>


